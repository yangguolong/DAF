<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">

        <item name="colorPrimary">@color/nav_tab</item>
        <item name="colorPrimaryDark">@color/nav_tab</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/bg</item>
        <item name="background">@null</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <!--  配置闪屏属性       -->
        <item name="android:windowSplashScreenBackground">@color/color_000000</item>
<!--      在线裁剪  https://c.runoob.com/more/svgeditor/ -->
        <item name="android:windowSplashScreenAnimatedIcon">@mipmap/ic_splash</item>
        <item name="android:windowSplashScreenAnimationDuration">1000</item>
<!--        <item name="android:windowSplashScreenBrandingImage">@drawable/ic_ac_infinity</item>-->
    </style>

    <style name="AppTheme.FullScreen">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

</resources>